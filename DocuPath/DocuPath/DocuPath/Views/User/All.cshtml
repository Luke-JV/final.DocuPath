@foreach (var user in Model.users)
{
    <div id="del-modal-@user.UserID" class="modal-background hidden">
        <div class="modalbox">
            <div class="modalbox-title-warning"><img class="modalbox-title-mdl2icon" src="~/Content/Resources/icoWarn.png" />WARNING</div>
            <div class="modalbox-message-text">
                Are you sure you want to <idntwarn>TOGGLE THE STATUS</idntwarn> of User <idntwarn>@user.FirstName @user.LastName</idntwarn>?
            </div>
            @* HELP/INFO *@
            <div class="panel-group" id="delete-modal-help-@user.UserID">
                <div class="modal-help-panel">
                    <div class="panel-heading modalbox-help-panel-heading" data-toggle="collapse" data-target="#delete-modal-helpbody-@user.UserID" data-parent="#delete-modal-help-@user.UserID">More Information</div>
                    <div id="delete-modal-helpbody-@user.UserID" class="panel-collapse collapse modalbox-help-panel-text">
                        <p style="margin-bottom: 0px; font-weight: bold">Code: W006</p>
                        <hr class="modal-help-hr-warning" />
                        <ul style="margin-bottom: 0">
                            <li>This action toggles the status of the selected User's profile between <kbd>Activated</kbd> and <kbd>Deactivated</kbd>.</li>
                            <li>Once a User's profile has been <kbd>Deactivated</kbd>, they are unable to log into the system until <kbd>Activated</kbd>.</li>
                        </ul>
                    </div>
                </div>
            </div>
            @* BUTTONS *@
            <div class="modalbox-button-bar col-md-12 modal-btn-col">
                @*<div class="">*@
                <form action="~/User/Delete/@user.UserID" method="post">
                    <input type="submit" id="del-yes-@user.UserID" value="Yes" class="btn btn-modal-generic" />
                    
                    <input type="button" id="del-no-@user.UserID" onclick="$('#del-modal-'+@user.UserID).addClass('hidden')" value="No" class="btn btn-modal-generic" />
                    </form>@*</div>*@
</div>
        </div>
    </div>
}



@* ASPTABLE WITH ALL USER PROFILES: *@
<table id="allUP" class="table table-striped table-hover">
    <thead>
        <tr>
            <th data-id="identifier" data-column-id="UID" data-visible="false" data-identifier="true" data-converter="numeric" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().UserID)
            </th>
            <th data-column-id="initials" data-formatter="initials" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().DisplayInitials)
            </th>
            <th data-column-id="nameSurname" data-order="asc" class="colour-dpred">
                @Html.DisplayName("Name & Surname")
            </th>
            <th data-column-id="HPCSARegNum" data-formatter="hpcsa" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().HPCSARegNumber)
            </th>
            <th data-column-id="nationalID" data-formatter="national" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().NationalID)
            </th>
            <th data-column-id="academicID" data-formatter="academic" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().AcademicID)
            </th>
            <th data-column-id="status" class="colour-dpred">
                @Html.DisplayNameFor(model => model.users.FirstOrDefault().IsDeactivated)
            </th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayInitials)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HPCSARegNumber)
                </td>
                <td>
                    @VERTEBRAE.ChunkString(item.NationalID, 6, " ")
                    @*@Html.DisplayFor(modelItem => item.NationalID)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicID)
                </td>
                @if (item.IsDeactivated == true)
                { <td>Deactivated</td> }
                else
	            { <td>Active</td> }
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/materialdatetime")
<script>
    $('#btnGenTokens').click(function () {
        
        var btnSubmit = document.getElementById('btnSubmit');
        
        btnSubmit.click();
    });
    </script>
    <script id="loadBootgrid" type="text/javascript">
        var grid = $("#allUP").bootgrid({
            caseSensitive: false,
            converters: {
                dpdate: {
                    from: function (value) { return moment(value); },
                    to: function (value) { return value.format("ddd D MMM YYYY"); }
                }
            },
            formatters: {
                // INSERTS APPROPRIATE ACTION BUTTONS FOR EACH LINE IN THE ASPTABLE:
                "commands": function (column, row) {
                    var checkStatus = row.status.trim().toUpperCase();
                    //return checkStatus.toUpperCase();

                    switch (checkStatus) {
                        case "ACTIVE":
                            return "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                            "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"TOGGLE STATUS\" data-placement=\"top\"><span class=\"mdl2icon mdl2-powerbtn\"></span></button>";
                        case "DEACTIVATED":
                            return "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                            "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"TOGGLE STATUS\" data-placement=\"top\"><span class=\"mdl2icon mdl2-powerbtn\"></span></button>";
                        default:
                            return "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                            "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.UID + "\" data-toggle=\"tooltip\" title=\"TOGGLE STATUS\" data-placement=\"top\"><span class=\"mdl2icon mdl2-powerbtn\"></span></button>";
                    }
                 },
                "initials": function (column, row) { /* APPLY LARGE IDENTIFIER CLASS TO ALL INITIALS: */
                    return "<span class=\"table-large-identifier\">"+ row.initials + "</span>";
                },
                "hpcsa": function (column, row) { /* APPLY LARGE IDENTIFIER CLASS TO ALL HPCSA REG NUMBERS: */
                    return "<span class=\"table-large-identifier\">" + row.HPCSARegNum + "</span>";
                },
                "national": function (column, row) { /* APPLY LARGE IDENTIFIER CLASS TO ALL NATIONAL ID NUMBERS: */
                    return "<span class=\"table-large-identifier\">" + row.nationalID + "</span>";
                },
                "academic": function (column, row) { /* APPLY LARGE IDENTIFIER CLASS TO ALL ACADEMIC ID NUMBERS: */
                    return "<span class=\"table-large-identifier\">" + row.academicID + "</span>";
                }
            }
        }).on("loaded.rs.jquery.bootgrid", function () {
            grid.find(".cmd-delete").on("click", function (e) { this.blur(); $('#del-modal-' + $(this).data("row-id")).removeClass('hidden'); }).tooltip().end()
                //.find(".cmd-edit").on("click", function (e) { this.blur(); window.location = "/User/Edit/" + $(this).data("row-id"); }).tooltip().end()
                .find(".cmd-view").on("click", function (e) { this.blur(); window.location = "/User/Details/" + $(this).data("row-id"); }).tooltip().end()
                .find(".pagination").tooltip().end()
                .find(".infos").tooltip().end()
        });
    </script>

    <script id="onDomReady" type="text/javascript">
        // Enable tooltips:
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Toggle Table Density:
        $("#btnDensityToggle").click(function () {
            var $target = $("#allUP");
            var $condensed = "table-condensed";
            var $minimal = "table-minimal"
            if ($target.hasClass($condensed) === false && $target.hasClass($minimal) === false) { $target.addClass($condensed); }
            else if ($target.hasClass($condensed)) { $target.removeClass($condensed); $target.addClass($minimal); }
            else if ($target.hasClass($minimal)) { $target.removeClass($minimal); }
            $("#btnDensityToggle").blur()
        });

        

       
    </script>
}