@model IEnumerable<DocuPath.DataLayer.CONTENT_TAG>
@{ ViewBag.Title = "All"; ViewBag.GenericHAPTICLocator = "AllGeneric"; ViewBag.SpecificHAPTICLocator = "AllCTSpecific"; ViewBag.PageInfoLocator = "AllCT"; }

@* BREADCRUMB NAVIGATION: *@
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li class="active">@Html.ActionLink("Content Tags", "All") </li>
</ol>
@* PAGE HEADER & ACTION BUTTONS: *@
<div class="grid hdr-grid">
    <div class="page-hdr">
        <div class="page-header-subgrid">
            <div class="icon-circle mdl2icon mdl2-tag"></div>
            <div class="circular-motif-left"><img src="~/Content/Resources/CircularMotifLeft.png" style="max-height: 45px" /></div>
            <div class="page-header-text">ALL CONTENT TAGS</div>
        </div>
    </div>
    <div class="page-btns">
        <div class="page-buttons-subgrid buttons-six">
            <div grid-area="left"><img src="~/Content/Resources/CircuitryMotifLeft.png" class="circuitry-left-motif" /></div>
            <div></div>
            <div grid-area="btn1">
                <form class="minimalform" action="~/ContentTag/Add" style="margin-top: 2px">
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-add btn-mdl2icon" type="submit" data-toggle="tooltip" title="ADD CONTENT TAG"></button>
                </form>
            </div>
            <div grid-area="btn2">
                <form class="minimalform" action="~/ContentTag/UpdateRepository" method="post" style="margin-top: 2px">
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-sync btn-mdl2icon" type="submit" data-toggle="tooltip" title="UPDATE TAG REPOSITORY"></button>
                </form>
            </div>
            <div grid-area="btn4">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn5">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnDensityToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-density btn-mdl2icon" data-toggle="tooltip" title="TOGGLE TABLE DENSITY"></button>
                </form>
            </div>
            <div grid-area="btn6">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn7">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnHapticToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-help btn-mdl2icon" onclick="this.blur()" data-toggle="tooltip" title="HELP"></button>
                </form>
            </div>
            <div></div>
            <div class="right-motif" grid-area="right"><img src="~/Content/Resources/CircuitryMotifRight.png" class="circuitry-right-motif" /></div>
        </div>
    </div>
</div>

<p class="alert-bar alert-bar-danger fullwidth" style="margin: 7.5px 0 7.5px 0">Note that maintenance actions executed from this page do not require confirmation before execution - the maintenance action executes immediately upon instruction.</p>

@* ASPTABLE WITH ALL CONTENT TAGS: *@
<table id="allCT" class="table table-striped table-hover">
    <thead>
        <tr>
            <th data-id="identifier" data-column-id="CTID" data-visible="false" data-identifier="true" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ContentTagID)
            </th>
            <th data-column-id="tagCode" data-formatter="tagCode" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ContentTagCode)
            </th>
            <th data-column-id="tagText" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ContentTagText)
            </th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentTagID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentTagCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentTagText)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/materialdatetime")

    <script id="loadBootgrid" type="text/javascript">
        var grid = $("#allCT").bootgrid({
            caseSensitive: false,
            rowCount: [10, 25, 50, 100],
            formatters: {
                // INSERTS APPROPRIATE ACTION BUTTONS FOR EACH LINE IN THE ASPTABLE:
                "commands": function (column, row) {
                    return  "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.CTID.trim() + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                            "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-edit\" data-row-id=\"" + row.CTID.trim() + "\" data-toggle=\"tooltip\" title=\"EDIT\" data-placement=\"top\"><span class=\"mdl2icon mdl2-edit\"></span></button>" +
                            "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.CTID.trim() + "\" data-toggle=\"tooltip\" title=\"DELETE\" data-placement=\"top\"><span class=\"mdl2icon mdl2-delete\"></span></button>";
                    },
                "tagCode": function (column, row) { /* APPLY LARGE IDENTIFIER CLASS TO ALL TAG CODES: */
                    return "<span class=\"table-large-identifier\">"+ row.tagCode + "</span>";
                }
            }
        }).on("loaded.rs.jquery.bootgrid", function () {
            grid.find(".cmd-delete").on("click", function (e) { this.blur(); window.location = "/ContentTag/Delete/" + $(this).data("row-id"); }).tooltip().end()
                .find(".cmd-edit").on("click", function (e) { this.blur(); window.location = "/ContentTag/Edit/" + $(this).data("row-id"); }).tooltip().end()
                .find(".cmd-view").on("click", function (e) { this.blur(); window.location = "/ContentTag/Details/" + $(this).data("row-id"); }).tooltip().end()
                .find(".pagination").tooltip().end()
                .find(".infos").tooltip().end()
        });
    </script>

    <script id="onDomReady" type="text/javascript">
        // Enable tooltips:
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Toggle Table Density:
        $("#btnDensityToggle").click(function () {
            var $target = $("#allCT");
            var $condensed = "table-condensed";
            var $minimal = "table-minimal"
            if ($target.hasClass($condensed) === false && $target.hasClass($minimal) === false) { $target.addClass($condensed); }
            else if ($target.hasClass($condensed)) { $target.removeClass($condensed); $target.addClass($minimal); }
            else if ($target.hasClass($minimal)) { $target.removeClass($minimal); }
            $("#btnDensityToggle").blur()
        });
    </script>
}