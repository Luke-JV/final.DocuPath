@model IEnumerable<DocuPath.DataLayer.MEDIA>
@using DocuPath.Models;
@{ ViewBag.Title = "All"; ViewBag.GenericHAPTICLocator = "AllGeneric"; ViewBag.SpecificHAPTICLocator = "AllMediaSpecific"; ViewBag.PageInfoLocator = "AllMedia"; }

@* BREADCRUMB NAVIGATION: *@
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li class="active">@Html.ActionLink("Media Repository", "All") </li>
</ol>
@* PAGE HEADER & ACTION BUTTONS: *@
<div class="grid hdr-grid">
    <div class="page-hdr">
        <div class="page-header-subgrid">
            <div class="icon-circle mdl2icon mdl2-media"></div>
            <div class="circular-motif-left"><img src="~/Content/Resources/CircularMotifLeft.png" style="max-height: 45px" /></div>
            <div class="page-header-text">ALL MEDIA ITEMS</div>
        </div>
    </div>
    <div class="page-btns">
        <div class="page-buttons-subgrid buttons-seven">
            <div grid-area="left"><img src="~/Content/Resources/CircuitryMotifLeft.png" class="circuitry-left-motif" /></div>
            <div></div>
            <div grid-area="btn1">
                <form class="minimalform" action="~/Media/Upload" style="margin-top: 2px">
                    @* TODO: Link form action to ADD NEW MEDIA *@
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-add btn-mdl2icon" type="submit" data-toggle="tooltip" title="ADD NEW MEDIA"></button>
                </form>
            </div>
            <div grid-area="btn2">
                <form class="minimalform" action="~/Media/Add" style="margin-top: 2px">
                    @* TODO: Link form action to HANDLE INBOUND MEDIA *@
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-inbound btn-mdl2icon" type="submit" data-toggle="tooltip" title="HANDLE INBOUND MEDIA"></button>
                </form>
            </div>
            <div grid-area="btn3">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn4">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnThumbnailSizeToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-expand btn-mdl2icon" data-toggle="tooltip" title="TOGGLE THUMBNAIL SIZE"></button>
                </form>
            </div>
            <div grid-area="btn5">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnDensityToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-density btn-mdl2icon" data-toggle="tooltip" title="TOGGLE TABLE DENSITY"></button>
                </form>
            </div>
            <div grid-area="btn6">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn7">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnHapticToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-help btn-mdl2icon" data-toggle="tooltip" title="HELP"></button>
                </form>
            </div>
            <div></div>
            <div class="right-motif" grid-area="right"><img src="~/Content/Resources/CircuitryMotifRight.png" class="circuitry-right-motif" /></div>
        </div>
    </div>
</div>
@foreach (var mediaItem in Model)
{
    if (mediaItem.STATUS.StatusValue != "Pending" || mediaItem.STATUS.StatusValue != "Locked")
    {
        <div id="del-modal-@mediaItem.MediaID" class="modal-background hidden">
            <div class="modalbox">
                <div class="modalbox-title-warning"><img class="modalbox-title-mdl2icon" src="~/Content/Resources/icoWarn.png" />WARNING</div>
                <div class="modalbox-message-text">
                    Are you sure you want to <idntwarn>DELETE</idntwarn> Media Item with caption
                    <br />"<idntwarn>@mediaItem.MediaCaption</idntwarn>"?
                </div>
                @* HELP/INFO *@
                <div class="panel-group" id="delete-modal-help-@mediaItem.MediaID">
                    <div class="modal-help-panel">
                        <div class="panel-heading modalbox-help-panel-heading" data-toggle="collapse" data-target="#delete-modal-helpbody-@mediaItem.MediaID" data-parent="#delete-modal-help-@mediaItem.MediaID">More Information</div>
                        <div id="delete-modal-helpbody-@mediaItem.MediaID" class="panel-collapse collapse modalbox-help-panel-text">
                            <p style="margin-bottom: 0px; font-weight: bold">Code: W001</p>
                            <hr class="modal-help-hr-warning" />
                            <ul style="margin-bottom: 0">
                                <li>This action cannot be reverted.</li>
                            </ul>
                        </div>
                    </div>
                </div>
                @* BUTTONS *@
                <div class="modalbox-button-bar col-md-12 modal-btn-col">
                    @*<div class="">*@
                    <input type="button" id="del-yes-@mediaItem.MediaID" href="~/Media/Delete/@mediaItem.MediaID" value="Yes" class="btn btn-modal-generic" />
                    <input type="submit" id="del-no-@mediaItem.MediaID" onclick="$('#del-modal-'+@mediaItem.MediaID).addClass('hidden')" value="No" class="btn btn-modal-generic btn-negate" />
                    @*</div>*@
                </div>
            </div>
        </div>
    }
}


@* ASPTABLE WITH ALL MEDIA ITEMS: *@
<table id="allMedia" class="table table-striped table-hover">
    <thead>
        <tr>
            <th data-id="identifier" data-column-id="MediaID" data-visible="false" data-identifier="true" data-converter="numeric" class="colour-dpred">
                @Html.DisplayNameFor(model => model.MediaID)
            </th>
            <th data-column-id="thumbnail" class="colour-dpred" data-sortable="false">
                @Html.DisplayName("Thumbnail")
            </th>
            <th data-column-id="caption" data-formatter="captionFix" class="colour-dpred">
                @Html.DisplayNameFor(model => model.MediaCaption)
            </th>
            <th data-column-id="purpose" class="colour-dpred">
                @Html.DisplayNameFor(model => model.MEDIA_PURPOSE.MediaPurposeValue)
            </th>
            <th data-column-id="dateAdded" data-converter="dpdate" data-order="desc" class="colour-dpred">
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th data-column-id="addedBy" class="colour-dpred">
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            @*<th data-column-id="status" class="colour-dpred">
                    @Html.DisplayNameFor(model => model.StatusID)
                </th>*@
            @*<th data-column-id="FCDR" data-cssClass="table-large-identifier" data-formatter="drnumbers" class="colour-dpred">
                    @Html.DisplayNameFor(model => model.ForensicDRNumber)
                </th>*@
            @*<th data-column-id="dateClosed" data-converter="dpdate" class="colour-dpred">
                    @Html.DisplayNameFor(model => model.DateClosed)
                </th>*@
            <th data-column-id="commands" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    @{ string imgHTML = ""; }
    <tbody>
        @foreach (var item in Model)
        {

            try
            {
                imgHTML = "<img src='/" + VERTEBRAE.GetThumbUrl(item.MediaLocation) + "' class='media-thumb thumbsize-normal' />";
            }
            catch (Exception x)
            {


            }
            // 404 TODO: Propagate correct IDs from VM
            if (item.STATUS.StatusValue != "Archived" && item.STATUS.StatusValue != "Inbound")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MediaID)
                    </td>
                    <td>
                        @*  <img src="@Url.Content(item.MediaLocation)" alt="thumbnail_@item.MediaID" class="media-thumb" style="height: 25px; width: 25px" />*@
                        @*<img src="~/@VERTEBRAE.GetThumbUrl(item.MediaLocation)" class="media-thumb thumbsize-normal"/>*@
                        @imgHTML


                        @*@Html.Raw(imgHTML)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MediaCaption)
                    </td>
                    @if (item.MEDIA_PURPOSE.MediaPurposeValue == "Case Related" && item.ForensicCaseID != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.MEDIA_PURPOSE.MediaPurposeValue) (@item.FORENSIC_CASE.ForensicDRNumber)
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.MEDIA_PURPOSE.MediaPurposeValue)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.USER.FirstName) @Html.DisplayFor(modelItem => item.USER.LastName)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.STATUS.StatusValue)
                        </td>*@
                    @*<td class="table-large-identifier">
                            @Html.DisplayFor(modelItem => item.ForensicDRNumber)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.DateClosed)
                        </td>*@
                </tr>
            }
            imgHTML = "";
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/materialdatetime")

    <script id="loadBootgrid" type="text/javascript">
        var grid = $("#allMedia").bootgrid({
            caseSensitive: false,
            converters: {
                dpdate: {
                    from: function (value) { return moment(value); },
                    to: function (value) { return value.format("ddd D MMM YYYY"); }
                }
            },
            formatters: {
                // INSERTS APPROPRIATE ACTION BUTTONS FOR EACH LINE IN THE ASPTABLE:
                "commands": function (column, row) {
                    return "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.MediaID + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                    "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-edit\" data-row-id=\"" + row.MediaID + "\" data-toggle=\"tooltip\" title=\"EDIT\" data-placement=\"top\"><span class=\"mdl2icon mdl2-edit\"></span></button>" +
                    "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.MediaID + "\" data-toggle=\"tooltip\" title=\"DELETE\" data-placement=\"top\" data-target=\"#del-modal-" + row.MediaID + "\"><span class=\"mdl2icon mdl2-delete\"></span></button> "    
                },
                "captionFix": function (column, row) {
                    return "<div style=\"min-width: 300px !important\">"+row.caption+"</div>";
                }
            }
        }).on("loaded.rs.jquery.bootgrid", function () {
            grid.find(".cmd-delete").on("click", function (e) { this.blur(); $('#del-modal-' + $(this).data("row-id")).removeClass('hidden'); }).tooltip().end()                
                .find(".cmd-edit").on("click", function (e) { this.blur(); window.location = "/Media/Edit/" + $(this).data("row-id"); }).tooltip().end()
                .find(".cmd-view").on("click", function (e) { this.blur(); window.location = "/Media/Details/" + $(this).data("row-id"); }).tooltip().end()
                .find(".pagination").tooltip().end()
                .find(".infos").tooltip().end()
        });
    </script>

    <script id="onDomReady" type="text/javascript">
        // Enable tooltips:
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Toggle Thumbnail Size:
        $("#btnThumbnailSizeToggle").click(function () {
            var $target = $(".media-thumb");
            var $large = "thumbsize-expanded";
            if ($target.hasClass($large)) {
                $target.removeClass($large);
            } else {
                $target.addClass($large);
            }
            $("#btnThumbnailSizeToggle").blur()
        });

        // Toggle Table Density:
        $("#btnDensityToggle").click(function () {
            var $target = $("#allMedia");
            var $condensed = "table-condensed";
            var $minimal = "table-minimal"
            if ($target.hasClass($condensed) === false && $target.hasClass($minimal) === false) { $target.addClass($condensed); }
            else if ($target.hasClass($condensed)) { $target.removeClass($condensed); $target.addClass($minimal); }
            else if ($target.hasClass($minimal)) { $target.removeClass($minimal); }
            $("#btnDensityToggle").blur()
        });
    </script>
}