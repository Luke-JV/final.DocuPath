    <tbody>
        @foreach (var item in Model.Where(lc => lc.STATUS.StatusValue != "Archived"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LegacyCaseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER.FirstName) @Html.DisplayFor(modelItem => item.USER.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STATUS.StatusValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LegacyDRNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LCBriefDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                @if (item.DateClosed.Value.Year == 9999)
                {
                    <td>
                        Active Case
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.DateClosed)
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
