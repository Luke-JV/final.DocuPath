                        <span>Legacy Case Details</span>
                    </div>
                    <div id="LCDetailsPanel" class="panel-collapse collapse">
                        <div class="panel-body">
                            <dl class="dl-horizontal">
                                @*<dt>
                                        @Html.DisplayNameFor(model => model.legacyCase.LegacyCaseID)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.legacyCase.LegacyCaseID)
                                    </dd>*@

                                <dt style="padding-top: 5.2px">
                                    @Html.DisplayNameFor(model => model.legacyCase.LegacyDRNumber)
                                </dt>

                                <dd class="large-identifier">
                                    @Html.DisplayFor(model => model.legacyCase.LegacyDRNumber)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.legacyCase.LCBriefDescription)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.legacyCase.LCBriefDescription)
                                </dd>
                                <hr class="details-hr" />
                                <dt>
                                    @Html.DisplayNameFor(model => model.legacyCase.UserID)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.legacyCase.USER.FirstName) @Html.DisplayFor(model => model.legacyCase.USER.LastName)
                                </dd>

                                @*<dt>
                                        @Html.DisplayNameFor(model => model.legacyCase.STATUS.StatusValue)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.legacyCase.STATUS.StatusValue)
