                                                });
    </script>
                                        
    @* DATETIMEPICKERS: *@
    <script name="DTPCallers" type="text/javascript">
        $("#DateClosed").click(function () {
            $('#DateClosed').bootstrapMaterialDatePicker({
                format: 'DD MMMM YYYY',
                year: true,
                date: true,
                time: false,
                clearButton: true,
                nowButton: true,
                nowText: "Now",
                switchOnClick: true,
                okText: "OK"
            });
        });

        $(function dateClosedDTP() {
            $('#DateClosed').bootstrapMaterialDatePicker({
                format: 'DD MMMM YYYY',
                year: true,
                date: true,
