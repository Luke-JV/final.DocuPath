    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li>@Html.ActionLink("Legacy Cases", "All", "LegacyCase") </li>
    <li class="active">@Html.ActionLink("Add Legacy Case", "Add") </li>
