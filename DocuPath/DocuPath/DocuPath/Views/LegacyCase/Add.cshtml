@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/fileinput")
@Scripts.Render("~/bundles/materialdatetime")

<script>

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        
        $("#LCDocs").fileinput({
            theme: "fa",
            uploadUrl: "/LegacyCase/UploadFiles",
            fileActionSettings: {
                showUpload: false
            },
        });

        

        

    $('#btnSave').click(function () {            
        
        // Checking whether FormData is available in browser
        if (window.FormData !== undefined) {
            //var fileUpload = $("#LCDocs").fileinput({ theme: "fa", uploadUrl: "/LegacyCase/UploadFiles" });

            //var fileUpload = $("#LCDocs").get(0);
            //var files = fileUpload.files;
            var files = $("#LCDocs").fileinput('getFileStack');

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }
            gdata = fileData;

            // Adding one more key to FormData object
            fileData.append('LCDR', document.getElementById("drnum").value);

            $.ajax({
                url: '/LegacyCase/UploadFiles',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    alert(result); //Throw Success Modal 404
                    document.getElementById("btnPOST").click();
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        } else {
            alert("FormData is not supported.");
        }
        });

    //$('#btnSave').click(function () {
    //    document.getElementById("btnPOST").click();
        
    //});

  

    
});
</script>  

