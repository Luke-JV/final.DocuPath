                                <table class="table table-striped">
                                    <tr>
                                        <th class="colour-dpred">Filename</th>
                                        <th class="colour-dpred">Actions</th>
                                    </tr>
                                    @{ DocuPath.DataLayer.DocuPathEntities ent = new DocuPath.DataLayer.DocuPathEntities();}
