@using Microsoft.AspNet.Identity
@using DocuPath.DataLayer;
@using DocuPath.Models;

@{ var currentUser = VERTEBRAE.getCurrentUser(); }

@if (Request.IsAuthenticated)
{
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle myprofile-dropdown" style="background-color: #979797; border-radius: 25px; padding-left: 5px; padding-right: 5px; color: #373737" data-toggle="dropdown"><i class="mdl2icon mdl2-individual inline-mdl2icon" style="color: #fff"></i>MY PROFILE<i class="mdl2icon mdl2-down inline-mdl2icon" style="color: rgba(174,31,31,1)"></i></a>
                <ul class="dropdown-menu account-dropdown">
                    <li>
                        <div class="navbar-content grid account-grid">
                            <div grid-area="initials_name" class="grid account-initials-name-subgrid">
                                <div grid-area="initials" class="icon-circle display-initials-account" style="height: 45px; width: 45px; margin: 0px">@currentUser.DisplayInitials.ToUpper()</div>
                                <div grid-area="name_email" class="text-left">
                                    <span grid-area="name" style="text-overflow: ellipsis; white-space: nowrap; text-transform: uppercase; letter-spacing: 1px">@currentUser.TITLE.TitleValue @currentUser.FirstName @currentUser.LastName</span>
                                    <span class="text-muted" grid-area="email">@currentUser.USER_LOGIN.Username</span>
                                </div>
                            </div>
                            <div grid-area="divider" class="divider" style="margin: 0px"></div>
                            <div grid-area="btn_view_password" class="grid account-btns-subgrid">
                                <form action="~/User/ViewProfile"><button type="submit" class="btn btn-default btn-sm fullwidth">View Profile</button></form>
                                <form action="~/User/UpdateProfile"><button type="submit" class="btn btn-default btn-sm fullwidth">Update Profile</button></form>
                            </div>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", grid_area = "btnLogout" }))
                            {
                                @Html.AntiForgeryToken()
                                <form action="javascript:document.getElementById('logoutForm').submit()"><button type="submit" class="btn btn-default btn-generic btn-sm fullwidth">Log Out</button></form>
                            }
                        </div>
                    </li>
                </ul>
            </li>
        </ul>

