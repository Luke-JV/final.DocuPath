@model IEnumerable<DocuPath.DataLayer.SERVICE_PROVIDER>
@{ ViewBag.Title = "All"; }

@* BREADCRUMB NAVIGATION: *@
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li class="active">@Html.ActionLink("Service Providers", "All") </li>
</ol>
@* PAGE HEADER & ACTION BUTTONS: *@
<div class="grid hdr-grid">
    <div class="page-hdr">
        <div class="page-header-subgrid">
            <div class="icon-circle mdl2icon mdl2-serviceprovider"></div>
            <div class="circular-motif-left"><img src="~/Content/Resources/CircularMotifLeft.png" style="max-height: 45px" /></div>
            <div class="page-header-text">ALL SERVICE PROVIDERS</div>
        </div>
    </div>
    <div class="page-btns">
        <div class="page-buttons-subgrid buttons-two">
            <div grid-area="left"><img src="~/Content/Resources/CircuitryMotifLeft.png" class="circuitry-left-motif" /></div>
            <div></div>
            <div grid-area="btn1">
                <form class="minimalform" action="javascript:void(0)" method="post" style="margin-top: 2px">
                    @* TODO: Link form action to ADD SP *@
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-add btn-mdl2icon" type="submit" data-toggle="tooltip" title="ADD SERVICE PROVIDER"></button>
                </form>
            </div>
            <div grid-area="btn2">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnDensityToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-density btn-mdl2icon" data-toggle="tooltip" title="TOGGLE TABLE DENSITY"></button>
                </form>
            </div>
            <div></div>
            <div class="right-motif" grid-area="right"><img src="~/Content/Resources/CircuitryMotifRight.png" class="circuitry-right-motif" /></div>
        </div>
    </div>
</div>
@* ASPTABLE WITH ALL SERVICE PROVIDERS: *@
<table id="allSP" class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th data-id="identifier" data-headerCssClass="header-sizing" data-column-id="SPID" data-visible="false" data-identifier="true" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ServiceProviderID)
            </th>
            <th data-column-id="companyName" data-headerCssClass="header-sizing" data-order="asc" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th data-column-id="companyTel" data-headerCssClass="header-sizing" data-formatter="companyTel" data-sortable="false" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyTelNum)
            </th>
            <th data-column-id="companyEmail" data-headerCssClass="header-sizing" data-formatter="companyEmail" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyEmail)
            </th>
            <th data-column-id="repName" data-headerCssClass="header-sizing" data-converter="dpdate" class="colour-dpred">
                @Html.DisplayName("Representative Name")
            </th>
            <th data-column-id="commands" data-headerCssClass="header-sizing" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsDeactivated != 1)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceProviderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyTelNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RepFirstName) @Html.DisplayFor(modelItem => item.RepLastName)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/materialdatetime")

    <script id="loadBootgrid" type="text/javascript">
        var grid = $("#allSP").bootgrid({
            caseSensitive: false,
            formatters: {
                // INSERTS APPROPRIATE ACTION BUTTONS FOR EACH LINE IN THE ASPTABLE:
                "commands": function (column, row) {
                    return "<a class=\"mdl2icon colour-dpblack\" data-toggle=\"tooltip\" value=\"View\" href=\"/ServiceProvider/Details/" + row.SPID.trim() + "\"><i class=\"mdl2-view\" style=\"font-style: normal\"></i></a>" +
                        "<a class=\"mdl2icon colour-dpblack\" data-toggle=\"tooltip\" value=\"Edit\" href=\"/ServiceProvider/Edit/" + row.SPID.trim() + "\"><i class=\"mdl2-edit\" style=\"font-style: normal\"></i></a>" +
                        "<a class=\"mdl2icon colour-dpblack\" data-toggle=\"tooltip\" value=\"Delete\" href=\"/ServiceProvider/Delete/" + row.SPID.trim() + "\"><i class=\"mdl2-delete\" style=\"font-style: normal\"></i></a>";
                },
                "companyTel": function (column, row) {
                    var tel = row.companyTel.trim();
                    return "<span style=\"font-weight: bold\"><span style=\"color: #666\">(" + tel.substring(0, 3) + ")</span> " + tel.substring(3, 6) + " " + tel.substring(6, 11) + "</span>";
                },
                "companyEmail": function (column, row) {
                    var address = row.companyEmail.trim();
                    var idxAt = address.search('@@');
                    return "<span style=\"font-weight: bold; color: #666\">" + address.substring(0, idxAt) + "</span><span style=\"font-weight: bold\"><span style=\"color: rgba(174,31,31,1)\">" + address.substring(idxAt, idxAt + 1) + "</span>" + address.substr(idxAt + 1) + "</span>";
                },
            }
        });
    </script>

    <script id="onDomReady" type="text/javascript">
        // Enable tooltips:
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Toggle Table Density:
        $("#btnDensityToggle").click(function () {
            var $target = $("#allSP");
            var $condensed = "table-condensed";
            var $minimal = "table-minimal"
            if ($target.hasClass($condensed) === false && $target.hasClass($minimal) === false) { $target.addClass($condensed); }
            else if ($target.hasClass($condensed)) { $target.removeClass($condensed); $target.addClass($minimal); }
            else if ($target.hasClass($minimal)) { $target.removeClass($minimal); }
            $("#btnDensityToggle").blur()
        });
    </script>
}