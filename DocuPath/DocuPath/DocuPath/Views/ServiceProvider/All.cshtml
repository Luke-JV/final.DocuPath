@model IEnumerable<DocuPath.DataLayer.SERVICE_PROVIDER>
@using DocuPath.Models
@{ ViewBag.Title = "All"; ViewBag.GenericHAPTICLocator = "AllGeneric"; ViewBag.SpecificHAPTICLocator = "AllSPSpecific"; ViewBag.PageInfoLocator = "AllSP"; }

@* BREADCRUMB NAVIGATION: *@
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li class="active">@Html.ActionLink("Service Providers", "All") </li>
</ol>
@* PAGE HEADER & ACTION BUTTONS: *@
<div class="grid hdr-grid">
    <div class="page-hdr">
        <div class="page-header-subgrid">
            <div class="icon-circle mdl2icon mdl2-serviceprovider"></div>
            <div class="circular-motif-left"><img src="~/Content/Resources/CircularMotifLeft.png" style="max-height: 45px" /></div>
            <div class="page-header-text">ALL SERVICE PROVIDERS</div>
        </div>
    </div>
    <div class="page-btns">
        <div class="page-buttons-subgrid buttons-five">
            <div grid-area="left"><img src="~/Content/Resources/CircuitryMotifLeft.png" class="circuitry-left-motif" /></div>
            <div></div>
            <div grid-area="btn1">
                <form class="minimalform" action="~/ServiceProvider/Add" style="margin-top: 2px">
                    <button class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-add btn-mdl2icon" type="submit" data-toggle="tooltip" title="ADD SERVICE PROVIDER"></button>
                </form>
            </div>
            <div grid-area="btn2">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn3">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnDensityToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-density btn-mdl2icon" data-toggle="tooltip" title="TOGGLE TABLE DENSITY"></button>
                </form>
            </div>
            <div grid-area="btn4">
                <img src="~/Content/Resources/SlantedDivider.png" style="height: 45px; margin-top: 3px" />
            </div>
            <div grid-area="btn5">
                <form class="minimalform" action="javascript:void(0)" style="margin-top: 2px">
                    <button id="btnHapticToggle" class="btn btn-default btn-generic btn-page-action mdl2icon mdl2-help btn-mdl2icon" onclick="this.blur()" data-toggle="tooltip" title="HELP"></button>
                </form>
            </div>
            <div></div>
            <div class="right-motif" grid-area="right"><img src="~/Content/Resources/CircuitryMotifRight.png" class="circuitry-right-motif" /></div>
        </div>
    </div>
</div>
@* ASPTABLE WITH ALL SERVICE PROVIDERS: *@
<table id="allSP" class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th data-id="identifier" data-headerCssClass="header-sizing" data-column-id="SPID" data-visible="false" data-converter="numeric" data-identifier="true" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ServiceProviderID)
            </th>
            <th data-column-id="companyName" data-headerCssClass="header-sizing" data-order="asc" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th data-column-id="companyTel" data-headerCssClass="header-sizing" data-formatter="companyTel" data-sortable="false" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyTelNum)
            </th>
            <th data-column-id="companyEmail" data-headerCssClass="header-sizing" data-formatter="companyEmail" class="colour-dpred">
                @Html.DisplayNameFor(model => model.CompanyEmail)
            </th>
            <th data-column-id="repName" data-headerCssClass="header-sizing" data-converter="dpdate" class="colour-dpred">
                @Html.DisplayName("Representative Name")
            </th>
            <th data-column-id="commands" data-headerCssClass="header-sizing" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsDeactivated != true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceProviderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyTelNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RepFirstName) @Html.DisplayFor(modelItem => item.RepLastName)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@foreach (var sp in Model)
{
    if (!sp.IsDeactivated)
    {
        <div id="del-modal-@sp.ServiceProviderID" class="modal-background hidden">
            <div class="modalbox">
                <div class="modalbox-title-warning"><img class="modalbox-title-mdl2icon" src="~/Content/Resources/icoWarn.png" />WARNING</div>
                <div class="modalbox-message-text">
                    Are you sure you want to <idntwarn>DELETE</idntwarn> Service Provider <idntwarn>@sp.CompanyName</idntwarn>?
                </div>
                @* HELP/INFO *@
                <div class="panel-group" id="delete-modal-help-@sp.ServiceProviderID">
                    <div class="modal-help-panel">
                        <div class="panel-heading modalbox-help-panel-heading" data-toggle="collapse" data-target="#delete-modal-helpbody-@sp.ServiceProviderID" data-parent="#delete-modal-help-@sp.ServiceProviderID">More Information</div>
                        <div id="delete-modal-helpbody-@sp.ServiceProviderID" class="panel-collapse collapse modalbox-help-panel-text">
                            <p style="margin-bottom: 0px; font-weight: bold">Code: W001</p>
                            <hr class="modal-help-hr-warning" />
                            <ul style="margin-bottom: 0">
                                <li>This action cannot be reverted.</li>
                            </ul>
                        </div>
                    </div>
                </div>
                @* BUTTONS *@
                <div class="modalbox-button-bar col-md-12 modal-btn-col">
                    @*<div class="">*@
                    <input type="button" id="del-yes-@sp.ServiceProviderID" href="~/ServiceProvider/Delete/@sp.ServiceProviderID" value="Yes" class="btn btn-modal-generic" />
                    <input type="submit" id="del-no-@sp.ServiceProviderID" onclick="$('#del-modal-'+@sp.ServiceProviderID).addClass('hidden')" value="No" class="btn btn-modal-generic btn-negate" />
                    @*</div>*@
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/materialdatetime")

    <script id="loadBootgrid" type="text/javascript">
        var grid = $("#allSP").bootgrid({
            caseSensitive: false,
            formatters: {
                // INSERTS APPROPRIATE ACTION BUTTONS FOR EACH LINE IN THE ASPTABLE:
                "commands": function (column, row) {
                    return "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-view\" data-row-id=\"" + row.SPID + "\" data-toggle=\"tooltip\" title=\"VIEW\" data-placement=\"top\"><span class=\"mdl2icon mdl2-view\"></span></button>" +
                                "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-edit\" data-row-id=\"" + row.SPID + "\" data-toggle=\"tooltip\" title=\"EDIT\" data-placement=\"top\"><span class=\"mdl2icon mdl2-edit\"></span></button>" +
                                "<button type=\"button\" class=\"btn btn-xs btn-bootgrid cmd-delete\" data-row-id=\"" + row.SPID + "\" data-toggle=\"tooltip\" title=\"DELETE\" data-placement=\"top\" data-target=\"#del-modal-" + row.SPID + "\"><span class=\"mdl2icon mdl2-delete\"></span></button> ";
                },
                "companyTel": function (column, row) {
                    var tel = row.companyTel.trim();
                    return "<span style=\"font-weight: bold\"><span style=\"color: #666\">(" + tel.substring(0, 3) + ")</span> " + tel.substring(3, 6) + " " + tel.substring(6, 11) + "</span>";
                },
                "companyEmail": function (column, row) {
                    var address = row.companyEmail.trim();
                    var idxAt = address.search('@@');
                    return "<span style=\"font-weight: bold; color: #666\">" + address.substring(0, idxAt) + "</span><span style=\"font-weight: bold\"><span style=\"color: rgba(174,31,31,1)\">" + address.substring(idxAt, idxAt + 1) + "</span>" + address.substr(idxAt + 1) + "</span>";
                },
            }
        }).on("loaded.rs.jquery.bootgrid", function () {
            grid.find(".cmd-delete").on("click", function (e) { this.blur(); $('#del-modal-' + $(this).data("row-id")).removeClass('hidden'); }).tooltip().end()                
                .find(".cmd-edit").on("click", function (e) { this.blur(); window.location = "/ServiceProvider/Edit/" + $(this).data("row-id"); }).tooltip().end()
                .find(".cmd-view").on("click", function (e) { this.blur(); window.location = "/ServiceProvider/Details/" + $(this).data("row-id"); }).tooltip().end()
                .find(".pagination").tooltip().end()
                .find(".infos").tooltip().end()
        });
    </script>

    <script id="onDomReady" type="text/javascript">
        // Enable tooltips:
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        // Toggle Table Density:
        $("#btnDensityToggle").click(function () {
            var $target = $("#allSP");
            var $condensed = "table-condensed";
            var $minimal = "table-minimal"
            if ($target.hasClass($condensed) === false && $target.hasClass($minimal) === false) { $target.addClass($condensed); }
            else if ($target.hasClass($condensed)) { $target.removeClass($condensed); $target.addClass($minimal); }
            else if ($target.hasClass($minimal)) { $target.removeClass($minimal); }
            $("#btnDensityToggle").blur()
        });
    </script>
}