@{ ViewBag.Title = "Calendar"; }

@* BREADCRUMB NAVIGATION: *@
<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") </li>
    <li class="active">@Html.ActionLink("Personal Google Calendar", "Calendar") </li>
</ol>
@* PAGE HEADER & ACTION BUTTONS: *@
