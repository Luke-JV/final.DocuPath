                                                                    {
                                                                        <dt style="padding-top: 5.2px">@Html.DisplayName("DR Number")</dt>
                                                                                            <dd class="large-identifier">@Html.DisplayFor(model => item.FORENSIC_CASE.ForensicDRNumber)</dd>
                                                                    }
                                                                    <hr class="details-hr" />
                                                                    <dt>
                                                                        @Html.DisplayName("Added By")
                                                                    </dt>

                                                                    <dd>
                                                                        @Html.DisplayFor(model => item.USER.FirstName) @Html.DisplayFor(model => item.USER.LastName)
                                                                    </dd>

                                                                    <dt>
                                                                        @Html.DisplayName("Date Added")
                                                                    </dt>

                                                                    <dd>
                                                                        @Html.DisplayFor(model => item.DateAdded)
                                                                    </dd>

                                                                    <dt>
                                                                        @Html.DisplayName("Status")
                                                                    </dt>
                                                                    @if (item.STATUS.StatusValue == "Active")
                                                                    {
                                                                        <dd>@Html.Raw(VERTEBRAE.StatusMarkup(item.STATUS.StatusValue, "status-ok"))</dd>
                                                                    }
                                                                    else if (item.STATUS.StatusValue == "Pending")
                                                                    {
                                                                        <dd>@Html.Raw(VERTEBRAE.StatusMarkup(item.STATUS.StatusValue, "status-warning"))</dd>
                                                                    }
                                                                    else
                                                                    {
                                                                        <dd>@Html.Raw(VERTEBRAE.StatusMarkup(item.STATUS.StatusValue, "status-inactive"))</dd>
                                                                    }
                                                                </dl>
