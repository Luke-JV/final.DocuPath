                                                                    <div class="col-md-12">
                                                                        @foreach (var tag in item.MEDIA_TAG.Where(x => x.MediaID == item.MediaID))
                                                                        {
                                                                            @Html.Label(tag.CONTENT_TAG.ContentTagText, new { @class = "details-tag", @data_toggle = "tooltip", @title = tag.CONTENT_TAG.ContentTagCode })
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @*<iframe class="frame1" src="~/@VERTEBRAE.GetUrl(item.LegacyDocumentLocation)"></iframe>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>

                </tr>
            }
        </table>
        <p id="noitems" class="alert-bar alert-bar-noitems fullwidth hidden">NO RESULTS FOUND!</p>
    </div>
}

