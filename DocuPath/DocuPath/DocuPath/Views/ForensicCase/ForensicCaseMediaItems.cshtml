                    <td class="text-center"><img src="~/@VERTEBRAE.GetThumbUrl(item.MediaLocation)" class="media-thumb" /></td>
                    <td><strong>@Html.DisplayFor(modelItem => item.MediaCaption)</strong></td>
                    <td><p style="max-width: 400px !important; margin: 0 !important; text-align: justify">@Html.DisplayFor(modelItem => item.MediaDescription)</p></td>
                    <td>
