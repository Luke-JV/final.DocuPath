<table id="allFC" class="table table-striped table-hover">
    <thead>
        <tr>
            <th data-id="identifier" data-column-id="FCID" data-visible="false" data-identifier="true" data-converter="numeric" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ForensicCaseID)
            </th>
            <th data-column-id="addedBy" class="colour-dpred">
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th data-column-id="status" class="colour-dpred">
                @Html.DisplayNameFor(model => model.StatusID)
            </th>
            <th data-column-id="FCDR" data-formatter="drnumbers" class="colour-dpred">
                @Html.DisplayNameFor(model => model.ForensicDRNumber)
            </th>
            <th data-column-id="briefDesc" class="colour-dpred">
                @Html.DisplayNameFor(model => model.FCBriefDescription)
            </th>
            <th data-column-id="dateAdded" data-converter="dpdate" data-order="desc" class="colour-dpred">
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th data-column-id="dateClosed" data-converter="dpdate" class="colour-dpred">
                @Html.DisplayNameFor(model => model.DateClosed)
            </th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false" class="colour-dpred">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.STATUS.StatusValue != "Archived")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForensicCaseID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.USER.FirstName) @Html.DisplayFor(modelItem => item.USER.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STATUS.StatusValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForensicDRNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FCBriefDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    @if (Convert.ToDateTime(item.DateClosed).Year == 9999)
                    {
                        @Html.Raw("<td>Active Case</td>")
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.DateClosed)
                        </td>                            
                    }
                </tr>
            }
        }
    </tbody>
</table>
